<keymap version="1" name="lgy keymap" parent="Visual Studio">
  <action id="ReformatCode">
    <keyboard-shortcut first-keystroke="ctrl alt enter" />
    <keyboard-shortcut first-keystroke="ctrl k" second-keystroke="f" />
    <keyboard-shortcut first-keystroke="ctrl k" second-keystroke="ctrl f" />
    <keyboard-shortcut first-keystroke="ctrl k" second-keystroke="d" />
    <keyboard-shortcut first-keystroke="ctrl k" second-keystroke="ctrl d" />
    <keyboard-shortcut first-keystroke="alt r" />
  </action>
  <action id="SelectNextOccurrence">
    <keyboard-shortcut first-keystroke="shift alt period" />
    <keyboard-shortcut first-keystroke="alt d" />
  </action>
  <action id="SilentCodeCleanup">
    <keyboard-shortcut first-keystroke="ctrl e" second-keystroke="f" />
    <keyboard-shortcut first-keystroke="ctrl e" second-keystroke="ctrl f" />
    <keyboard-shortcut first-keystroke="alt f" />
  </action>
</keymap>