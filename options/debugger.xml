<application>
  <component name="XDebuggerSettings">
    <data-views>
      <option name="valueLookupDelay" value="150" />
    </data-views>
    <general />
    <debuggers>
      <debugger id="dotnet_debugger">
        <configuration>
          <option name="breakOnUserUnhandledExceptions" value="true" />
          <option name="enableExternalSourceDebug" value="false" />
          <option name="evaluationTimeoutMs" value="10000" />
          <option name="processExceptionsOutsideMyCode" value="true" />
          <option name="userUnhandledExceptionsIgnoreList">
            <list>
              <option value="System.OperationCanceledException" />
              <option value="System.Threading.ThreadAbortException" />
              <option value="System.IO.FileNotFoundException" />
            </list>
          </option>
        </configuration>
      </debugger>
    </debuggers>
  </component>
</application>